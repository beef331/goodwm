{
    "keyconfigs": [
        {
            "desc": "Move Active Window Left",
            "key": "Super+Shift+Left",
            "command": "MoveLeft"
        },
        {
            "desc": "Move Active Window Right",
            "key": "Super+Shift+Right",
            "command": "MoveRight"
        },
        {
            "desc": "Close Selected Window",
            "key": "Super+Shift+Q",
            "command": "CloseWindow"
        },
        {
            "desc": "Move To Screen -1",
            "key": "Super+Control+Left",
            "command": "MoveScreenLeft"
        },
        {
            "desc": "Move To Screen +1",
            "key": "Super+Control+Right",
            "command": "MoveScreenRight"
        },
        {
            "desc": "Focus To Screen -1",
            "key": "Super+Control+Shift+Left",
            "command": "FocusScreenRight"
        },
        {
            "desc": "Focus To Screen +1",
            "key": "Super+Control+Shift+Right",
            "command": "FocusScreenLeft"
        },
        {
            "desc": "Move Focus Left",
            "key": "Super+Left",
            "command": "FocusLeft"
        },
        {
            "desc": "Move Focus Right",
            "key": "Super+Right",
            "command": "FocusRight"
        },
        {
            "desc": "Make Window Main",
            "key": "Super+M",
            "command": "MakeMain"
        },
        {
            "desc": "Open Browser",
            "key": "Super+B",
            "command": "google-stable & disown"
        },
        {
            "desc": "Open Rofi",
            "key": "Super+D",
            "command": "rofi -combi-modi window,drun -show combi -modi combi"
        },
        {
            "desc": "Open Flameshot",
            "key": "Control+Shift+3",
            "command": "flameshot gui"
        },
        {
            "desc": "Exit Goodwm",
            "key": "Super+Shift+E",
            "command": "killall goodwm"
        },
        {
            "desc": "Reload Config",
            "key": "Super+Shift+R",
            "command": "ReloadConfig"
        },
        {
            "desc": "Fullscreen window",
            "key": "Super+F",
            "command": "MakeFullScreen"
        },
        {
            "desc": "Toggle Floating Window",
            "key": "Super+Shift+F",
            "command": "MakeFloating"
        }
    ],
    "screenlayout": [
        "LeftAlternating",
        "Vertical"
    ],
    "theme": {
        "border-size": 10,
        "background-normal": "#FF00FF",
        "background-focus": "#00FF00"
    }
}
